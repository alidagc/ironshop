<h2>Edit Product Details</h2>

<form action="/products/<%=productDetails._id%>/update" method="post">
  <label for="product-name-input">Name of product</label>
  <input id="product-name-input" type="text"
    name="productName" value="<%=productDetails.name%>">
                <%# We added the value so that user can see the current value of the field%>
  <br>
  <label for="product-price-input">Price</label>
  <input id="product-price-input" type="number" step="0.1"
    name="productPrice" value="<%= productDetails.price %>">
  <br>                                                <!-- req.body.productPrice -->

  <label for="product-image-input">Image URL</label>
  <input id="product-image-input" type="url"
    name="productImageUrl" value="<%=productDetails.imageUrl%>">
  <br>                                   <!-- req.body.productImageUrl -->
  <label for="product-description-input">Description</label>
  <textarea id="product-description-input" type="text" name="productDescription"><%=productDetails.description%></textarea>
  <br>

  <button> Save the changes </button>
</form>

<a href="/products">Go back to Products</a>
